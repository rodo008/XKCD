@{ 
    String imageTitle = ViewData["image-title"].ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["image-title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="main-page">
        <header>
            <h1>XKCD</h1>
        </header>
        <h3>@(imageTitle)</h3>
        <div class="container main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <div class="nav-bar">
            <a href="javascript:void()"><< Previous</a>
            <a href="javascript:void()">Next >></a>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; @(DateTime.Now.Year) - WEB - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
