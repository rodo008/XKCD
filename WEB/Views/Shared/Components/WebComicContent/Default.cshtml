@model Domain.Model.WebComic

@{
    ViewData["Title"] = "X";
    ViewData["image-title"] = Model.Title;
}

<h3 class="img-title">@Model.Title</h3>
<div class="container main-content">
    <main role="main" class="pb-3">

        <div class="row">
            <div class="col col-md-12">
                <div class="row">
                    <div class="col col-md-12">
                        <div class="img-container">
                            <img src="@Model.Img" />
                        </div>
                    </div>
                    <div class="col col-md-12">
                        <div class="image-alt">
                            <p>@Model.Alt</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col col-md-3"></div>
        </div>

    </main>
</div>
<div class="nav-bar">

    @if (Model.Num>1)
    {
        <a class="btn-prev" href="@Url.Action("Comic", "Home", new { code = Model.Num - 1 })">Previous</a>
    }

    @if (!Model.IsTodayComic)
    {
        <a class="btn-next" href="@Url.Action("Comic", "Home", new { code = Model.Num + 1 })">Next >></a>
    }
</div>